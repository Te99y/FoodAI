# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Inference mode: "remote" (default) or "demo"
INFERENCE_MODE=demo

# Remote inference (only needed if INFERENCE_MODE=remote)
INFERENCE_SSH_HOST=your.server.ip
INFERENCE_SSH_PORT=22
INFERENCE_SSH_USER=youruser
INFERENCE_SSH_PASSWORD=yourpassword

# Remote file locations (adjust to your setup)
INFERENCE_REMOTE_UPLOAD_PATH=/tmp/uploaded_image.png
INFERENCE_REMOTE_SEGMENTED_PATH=/tmp/enhance_vis.png
INFERENCE_REMOTE_JSON_PATH=/tmp/food_area.json

# Optional: command to run inference on remote machine
INFERENCE_DOCKER_COMMAND=docker exec -i graduate2 bash -c "cd FoodSAM && python FoodSAM/semantic_v2.py --img_path dataset/uploaded_image.png --output dataset/test_output --data_root dataset/test_output"
